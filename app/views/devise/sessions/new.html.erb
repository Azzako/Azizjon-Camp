<div class="center"> 
<style>
  h2{
    color: #FFFAFA;
  }
</style>
<br>
<h2 align="center">Log in</h2>
<br>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
  <div class="col-md-12">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email", style: "background: none; color: #fff;"%>
  </div>
<br>
  <div class="col-md-12">
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password", style: "background: none; color: #fff;"%>
  </div>

  <% if devise_mapping.rememberable? %>
  <style>
    .field{
      color: #FFFAFA;
    }
  </style>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  <br>
  <div class="actions">
    <%= f.submit "Log in", data: {turbo: false}, class: "btn btn-outline-light" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>