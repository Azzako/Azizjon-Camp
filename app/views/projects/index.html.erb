<div id="projects">
<br>
<br>
<br>


<div class="row">
  <% @projects.each do |project| %> 

  <div class="card-body", style="width: 25rem; height: 10rem; border: 1px solid rgb(240, 251, 240);">
    <style>
      h5{
        color: white;
      }
      p{
        color: white;
      }
    </style>
    <h5 class="card-title"><%= project.name %></h5>
    <p class="card-text"><%= project.description %></p>
    <br>
    <%= link_to "Show project", project, class: "btn btn-outline-secondary", style: "width: 150px; height: 38px;" %>
  </div>
<% end %>
</div>
</div>